<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context=".ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_bold_italic"
        android:gravity="center"
        android:text="MY PROFILE"
        android:textColor="#EEF3EB"
        android:textSize="25sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c1c1c1"
        android:layout_marginVertical="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/avatar_image"
        android:onClick="customerImage"
        android:layout_gravity="center"
        android:id="@+id/customerImage"
        android:layout_marginTop="36dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap Image for FullView"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/alegreya_italic"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c1c1c1"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/customerName"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:textSize="30sp"
        android:fontFamily="@font/alegreya_bold_italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/customerEmail"
        android:textAlignment="center"
        android:textColor="#100F0F"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:fontFamily="@font/alegreya_bold_italic" />

</LinearLayout>