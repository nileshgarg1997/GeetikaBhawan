            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya_italic"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
