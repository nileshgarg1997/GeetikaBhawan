            android:textAlignment="center"
            android:textColor="#EEF3EB"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFF"
            android:layout_marginTop="10dp"/>

