                    <include layout="@layout/shimmer_for_gallery"/>
                    <include layout="@layout/shimmer_for_gallery"/>
                    <include layout="@layout/shimmer_for_gallery"/>
                    <include layout="@layout/shimmer_for_gallery"/>

                </GridLayout>


            </com.facebook.shimmer.ShimmerFrameLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>